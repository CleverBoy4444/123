append page-nav
	ul.page-nav.column-item
		li
			ul.page-nav
				li
					span= 'Select: '
					select#select
						option(id='category', value='category', selected='selected') Category
						option(id='topic', value='topic') Topic
				li
					span= 'Owner: '
					select#owner
						option(value='all-users', selected='selected') (default) All users
						if owners !== undefined
							each owner in owners
								option(value='#{"owner_"+owner.id}') #{owner.name}
				li
					span= 'Order By: '
					select#order
						option(value='oldest', selected='selected') oldest
						option(value='newest') newest
		li
			ul.page-nav
				li #{'Welcome, '}
					span(id='user-name', data-id=id) #{name}
					| !
				li
					| #{'Chat: '}
					select#online
						option ( Forum )
						if online !== undefined
							each user in online
								option(value='#{user.name}') #{user.name}